    <!-- Welcome Back Text -->
    <TextView
        android:id="@+id/tvWelcomeBack"
        android:layout_width="340dp"
        android:layout_height="79dp"
        android:text="Welcome Back!"
        android:textColor="#0D98BA"
        android:textSize="40sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="300dp"/> <!-- Adjust spacing from top -->

    <!-- Email Input Field -->
    <EditText
        android:id="@+id/idEdtEmail"
        android:layout_width="354dp"
        android:layout_height="63dp"
        android:hint="@string/enter_your_email"
        android:inputType="textEmailAddress"
        android:importantForAutofill="no"
        android:padding="12dp"
        android:background="@android:drawable/edit_text"
        android:layout_below="@id/tvWelcomeBack"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"/>

    <!-- Password Input Field -->
    <EditText
        android:id="@+id/idEdtPassword"
        android:layout_width="354dp"
        android:layout_height="60dp"
        android:hint="@string/enter_password"
        android:inputType="textPassword"
        android:importantForAutofill="no"
        android:padding="12dp"
        android:background="@android:drawable/edit_text"
        android:layout_below="@id/idEdtEmail"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"/>

    <TextView
        android:id="@+id/tvForgotPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Forgot Password?"
        android:textColor="#0F83A0"
        android:textSize="16sp"
        android:textStyle="normal"
        android:gravity="end"
        android:layout_alignEnd="@id/idEdtPassword"
        android:layout_below="@id/idEdtPassword"
        android:layout_marginTop="5dp"/>

    <!-- Login Button -->
    <Button
        android:id="@+id/idBtnLogin"
        android:layout_width="354dp"
        android:layout_height="60dp"
        android:text="@string/login"
        android:padding="15dp"
        android:background="@drawable/button_bg"
        android:textColor="#FFFFFF"
        android:layout_below="@id/tvForgotPassword"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"/>

    <!-- Horizontal Line -->
    <View
        android:id="@+id/viewDivider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#0E6E85"
        android:alpha="0.21"
        android:layout_below="@id/idBtnLogin"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"/>

    <!-- OR Text -->
    <TextView
        android:id="@+id/tvOr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OR"
        android:textColor="#0E6E85"
        android:textSize="20sp"
        android:textStyle="normal"
        android:layout_below="@id/viewDivider"
        android:layout_centerHorizontal="true"/>

